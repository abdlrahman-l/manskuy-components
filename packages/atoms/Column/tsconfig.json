{
    "extends": "../../../tsconfig.json",
    "compilerOptions": {
      "outDir": "lib/cjs",          
      "module": "CommonJS",
      "moduleResolution": "node",   
      "esModuleInterop": true,       
      "typeRoots": ["./node_modules/@types", "./src/types"],
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "types": ["node"],

    "resolveJsonModule": true,
    "jsx": "react",
    "lib": ["es6", "dom", "es2016", "es2017"],
    },
    "include": [
      "./src"
    ],
    "exclude": [
        "**/node_modules", "**/lib", "**/rollup.config.js"
    ]
   }